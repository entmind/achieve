<p id="notice"><%= notice %></p>
<!--# remote: trueを追記したよ追記したよ。ajaxの設定のため。dive15 -->
<%= form_for([blog, comment], remote: true) do |f| %>
  <%= f.error_messages! %>
  <%= f.hidden_field :blog_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>