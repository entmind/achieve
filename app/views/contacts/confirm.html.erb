<div class="container">  <!-- 確認画面を作るよ dive03課題 -->
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
        <p id="notice"><%= notice %></p>
        <h1>お問い合わせ 確認画面</h1>
        <h3>以下の内容で送信しますか？</h3>

        <%= form_for(@contact) do |f| %>
        
            <!-- バリデーションエラーの件数表示するよ dive02-->
            <% if @contact.errors.any? %>
                <div id="error_explanation">
                            <!-- @contact.errorsはバリデーションした際のエラー情報です dive02 -->
                            <!-- @full_messagesは複数のエラーメッセージを表示します dive02 -->
                    <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
                    <ul>
                        <% @contact.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
        
            <!-- <%= f.label :name %> -->
            <p>Name(お問い合わせ件名)：<%= @contact.name %></p>
            <%= f.hidden_field :name %>
            <!-- <%= f.label :email %> -->
            <p>Email(Ｅメール)：<%= @contact.email %></p>
            <%= f.hidden_field :email %>
            <!-- <%= f.label :content %> -->
            <p>Content(お問い合わせ本文)：<%= @contact.content %></p>
            <%= f.hidden_field :content %>
            <%= f.submit "お問い合わせを送信する", class: 'btn btn-default btn-md btn-success' %>
        <% end %>
        
    </div>
</div>

<br><br>
<!-- <%= link_to "[ 記事一覧画面に戻る ]", name: 'back' %> -->

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :email %>
    <%= f.hidden_field :content %>
    <%= f.submit "お問い合わせ入力画面に戻る", name: 'back', class: 'btn btn-default btn-md' %>
        <!-- 前画面に戻るときに、パラメータ保持で戻りたいので、「name: 'back'」とname属性を追記したよ。dive03課題 -->
<% end %>





