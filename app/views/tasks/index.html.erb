<div class="container">
  <div class="wrapper col-md-12 col-sm-12">
    <p id="notice"><%= notice %></p>
      <h1>タスク 一覧</h1>
      
      <div class="task">
        <table class="task">
          <thead>
            <tr>
              <th>User</th>
              <th>Title</th>
              <th>Content</th>
              <th>Deadline</th>
              <th>Charge</th>
              <th>Done</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @tasks.each do |task| %>
              <tr>
                <td><%= task.user.name %></td>
                <td><%= task.title %></td>
                <td><%= task.content %></td>
                <td><%= task.deadline %></td>
                <td><%= task.charge_id %></td>
                <td><%= if task.done? then "完了" else "未完了" end %></td>
                <td><%= task.status == 1? "対応中" : "未着手" %></td>
                <td><%= link_to 'Show', user_task_path(task.user, task) %></td>
                <td><%= link_to 'Edit', edit_user_task_path(task.user, task) %></td>
                <td><%= link_to 'Destroy', user_task_path(task.user, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <br>
      <%= link_to 'New Task', new_user_task_path(@user) %>
  </div>
</div>
